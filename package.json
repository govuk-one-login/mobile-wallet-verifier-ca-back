{
  "name": "mobile-wallet-verifier-ca-back",
  "version": "1.0.0",
  "description": "Mobile wallet verifier CA backend services",
  "type": "module",
  "scripts": {
    "postinstall": "husky || true",
    "build": "mkdir -p dist && cp -f open-api-spec.yaml dist/ && node build.mjs",
    "test": "vitest run",
    "test:cov": "vitest run --coverage",
    "mock:cert": "tsx src/lambdas/generate-mock-issue-cert/handler.ts",
    "setup:android": "tsx scripts/setup-android-infrastructure.ts",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "infra:format:check": "rain fmt --verify application.yaml",
    "infra:format": "rain fmt --write application.yaml"
  },
  "license": "MIT",
  "dependencies": {
    "@aws-lambda-powertools/logger": "^2.30.2",
    "@aws-sdk/client-dynamodb": "^3.983.0",
    "@aws-sdk/client-secrets-manager": "^3.983.0",
    "@peculiar/asn1-android": "^2.3.8",
    "@peculiar/asn1-schema": "^2.3.8",
    "@peculiar/webcrypto": "1.5.0",
    "@peculiar/x509": "1.14.3",
    "esbuild": "^0.27.2",
    "jose": "^6.1.3",
    "jsonwebtoken": "^9.0.3",
    "pkijs": "^3.0.15"
  },
  "engines": {
    "node": ">=22.0.0 <23.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/aws-lambda": "^8.10.160",
    "@types/js-yaml": "^4.0.9",
    "@types/jsonwebtoken": "^9.0.10",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.39.2",
    "glob": "^13.0.0",
    "husky": "^9.1.7",
    "jiti": "^2.6.1",
    "js-yaml": "^4.1.1",
    "prettier": "^3.8.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "vitest": "^4.0.15"
  }
}
